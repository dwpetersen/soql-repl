{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Scratchpad",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scratchpad.js",
            "preLaunchTask": "npm: dev",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        }
    ]
}
